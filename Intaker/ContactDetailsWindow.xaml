<Window
    x:Class="Intaker.ContactDetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Intaker"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ContactDetailsWindow"
    Width="300"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="NameTextBox" Margin="0,0,0,5" />
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,5" />
            <TextBox x:Name="PhoneNumberTextBox" Margin="0,0,0,5" />
            <Button
                x:Name="UpdateButton"
                Click="UpdateButton_OnClick"
                Content="Update" />
            <Button
                x:Name="DeleteButton"
                Background="PaleVioletRed"
                Click="DeleteButton_OnClickButton_OnClick"
                Content="Delete"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
